{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules",
			"dist",
			".next",
			"globals.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"lineEnding": "lf",
		"indentWidth": 2,
		"lineWidth": 100,
		"ignore": [
			"*.json",
			"*.yml",
			"*.yaml",
			"*.md"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"node_modules"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}